{
  "description": "Rust development hooks for code quality, security, and dependency analysis",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"${CLAUDE_PLUGIN_ROOT}/hooks/scripts/rust-hooks.sh\"",
            "timeout": 120
          }
        ]
      }
    ]
  }
}
